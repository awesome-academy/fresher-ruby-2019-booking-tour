<button type="button" class="btn-lg home_search_button"
  data-toggle="modal" data-target="#rating_tour">
  <%= t ".add_rating" %>
</button>
<div class="modal fade" id="rating_tour" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title"><%= @tour.name %></h4>
      </div>
      <div class="modal-body">
        <%= form_for :rating,  url: tour_ratings_path(@tour),
          remote: true, method: :post do |f| %>
          <div class="rate_error"></div>
          <div class="star_content">
            <label><%= "Quantity" %></label>
            <div class="form-group">
              <%= f.hidden_field :star, value: Settings.max_star %>
              <% Settings.max_star.times do |i| %>
                <div class="star <%= "star_on" if i + 1 == Settings.min_star %>">
                  <i class="fa fa-star" value="<%= i + 1 %>"></i>
                </div>
               <% end %>
            </div>
            <div class="form-group">
              <%= f.button "Submit", type: :submit, class: "btn btn-info" %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><%= "Close" %></button>
      </div>
    </div>
  </div>
</div>
 
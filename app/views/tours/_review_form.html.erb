  <button type="button" class="btn-lg home_search_button"
    data-toggle="modal" data-target="#review_tour">
    <%= t ".add_review" %>
  </button>
<div class="modal fade" id="review_tour" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title"><%= @tour.name %></h4>
      </div>
      <div class="modal-body">
        <%= form_for [@tour, @review],
          remote: true, method: :post do |f| %>
          <div class="review_error"></div>
          <div class="review_content_form">
            <div class="form-group">
              <%= f.label :content, t(".content") %>
              <%= f.text_area :content, class: "form-control", rows: Settings.row_default,
                placeholder: "Your can review place, food ..." %>
            </div>
            <div class="form-group">
              <%= f.fields_for :picture, @review.build_picture || @review.picture do |build| %>
                <%= build.file_field :picture_link, class: "form-control" %>
              <% end %>
            </div>
            <div class="form-group">
              <%= f.button t(".post"), type: :submit, class: "btn btn-info" %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" id= "btn_review" ><%= t ".close" %></button>
      </div>
    </div>
  </div>
</div>
 
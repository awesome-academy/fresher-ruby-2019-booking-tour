 <% if user_signed_in? && is_current_user?(bank_account.user) %>
  <div class="destination item">
    <div class="bank-account">
    <div class="row">
      <div class="col">
        <div class="avatar_bank">
          <%= image_tag get_avatar(bank_account.user) %>
        </div>
      </div>
      <div class="col">
        <div class="destination_price"><%= bank_account.name %></div>
        <div class="destination_price"><% "Account number: " %><%= bank_account.account_number %></div>
        <div class="destination_price"><%= "$ " %><%= bank_account.amount %></div>
      </div>
    </div>
      <div class="row">
        <% if user_signed_in? && is_current_user?(bank_account.user) %>
          &ensp; 
          <%= link_to edit_bank_account_path(bank_account), class: "btn btn-warning" do %>
            <i class="fa fa-edit"></i>
          <% end %>
          &ensp;
          <%= link_to bank_account_path(bank_account), method: :delete,
            data: { confirm: t(".are_you_sure?") }, class: "btn btn-danger" do %>
            <i class="fa fa-trash"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

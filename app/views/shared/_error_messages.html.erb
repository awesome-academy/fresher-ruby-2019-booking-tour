<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <%= t ".the_form" %> <%= pluralize(object.errors.size, t(".error")) %>.
    </div>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<% if activity&.recipient && activity&.trackable&.tour_id %>
  <li>
    <div class="comment_item d-flex flex-row align-items-start jutify-content-start">
      <div class="comment_content">
        <div class="comment_title_container d-flex flex-row align-items-center justify-content-start">
          <div class="comment_time ml-auto"><%= time_ago_in_words(activity.created_at) %></div>
        </div>
        <div class="comment_text">
        <p>
          <span><%= link_to(activity.recipient.name, tour_path(activity.trackable.tour_id)) << "Comment" %></span>
        </p>
        </div>
      </div>
    </div>
  </li>
<% end %>
<div class="container-login">
  <div class="d-flex justify-content-center h-100">
    <div class="card register">
      <div class="card-header">
        <h2><%= t ".sign_up" %></h2>
        <div class="d-flex justify-content-end social_icon">
          <span><i class="fa fa-facebook-square"></i></span>
          <span><i class="fa fa-google-plus-square"></i></span>
          <span><i class="fa fa-twitter-square"></i></span>
        </div>
      </div>
      <div class="card-body">
        <%= form_for resource, as: resource_name,
          url: registration_path(resource_name) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %><br>
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fa fa-user"></i></span>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: t(".email"),
              class: "form-control", placeholder: t(".email") %>
          </div>
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fa fa-user"></i></span>
            </div>
            <%= f.text_field :name, autofocus: true, autocomplete: t(".name"),
              class: "form-control", placeholder: t(".name") %>
          </div>
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fa fa-user"></i></span>
            </div>
            <%= f.text_field :phone_number, autofocus: true, autocomplete: t(".phone_number"),
              class: "form-control", placeholder: t(".phone_number") %>
          </div>
          <% if @minimum_password_length %>
          <em>(<%= t ".characters_minimum", {"count": @minimum_password_length} %>)</em>
          <% end %><br/>
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fa fa-key"></i></span>
            </div>
            <%= f.password_field :password, autocomplete: t(".current_password"),
              class: "form-control", placeholder: t(".password") %>
          </div>
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fa fa-key"></i></span>
            </div>
            <%= f.password_field :password_confirmation, autocomplete: t(".new_password"),
              class: "form-control", placeholder: t(".password_confirmation") %>
          </div>
          <div class="form-group">
            <%= f.submit t(".sign_up"), class: "btn float-right login_btn" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
